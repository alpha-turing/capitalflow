# Database Configuration
DATABASE_URL=postgresql://reaum_user:your_password@localhost:5432/reaum_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Security Settings
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENCRYPTION_KEY=your-32-byte-base64-encoded-key

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOW_CREDENTIALS=true

# File Upload Settings
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=[".pdf", ".csv", ".xlsx", ".xls"]

# External API Keys
NSE_API_KEY=your_nse_api_key
BSE_API_KEY=your_bse_api_key
AMFI_API_URL=https://www.amfiindia.com/spages/NAVAll.txt
RBI_FX_API_URL=https://www.rbi.org.in/
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=your_sentry_dsn

# Application Settings
APP_NAME=Reaum
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Financial Year Settings
FINANCIAL_YEAR_START_MONTH=4  # April
FINANCIAL_YEAR_START_DAY=1

# Default Currency
BASE_CURRENCY=INR

# Pricing Job Settings
PRICING_JOB_SCHEDULE="0 18 * * 1-5"  # 6 PM on weekdays
FX_RATE_SCHEDULE="0 9,15 * * 1-5"    # 9 AM and 3 PM on weekdays