# Test Environment Configuration
APP_NAME=Reaum-Test
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=test

# Security - Test values only
SECRET_KEY=test-secret-key-for-testing-purposes-only-do-not-use-in-production
ENCRYPTION_KEY=test-encryption-key-32-characters

# Database - SQLite for tests (will be overridden in conftest.py)
DATABASE_URL=sqlite+aiosqlite:///:memory:

# Redis - Mock for tests
REDIS_URL=redis://localhost:6379/0

# CORS
ALLOWED_ORIGINS=["http://testserver", "http://localhost:3000"]
ALLOW_CREDENTIALS=true

# File Upload
MAX_FILE_SIZE_MB=5
UPLOAD_DIR=./test_uploads
ALLOWED_EXTENSIONS=[".pdf", ".csv", ".xlsx", ".xls"]

# Celery - Test broker
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# External APIs - Mock values
NSE_API_KEY=test-nse-key
BSE_API_KEY=test-bse-key
ALPHA_VANTAGE_API_KEY=test-av-key